header.bg-indigo-600.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/") 
            img(src="/img/icon.png", alt="" class="inline w-12")
            h1.text-2xl.text-white.font-extrabold.text-center.inline Inmo
                span.font-normal Click

        if usuario
            nav(class="my-5 text-sm flex flex-col items-center md:flex-row font-bold text-white gap-5")
                div(class="flex justify-between")
                    a(href="/mis-propiedades") Mis Propiedades

                form(action="/auth/cerrar-sesion" method="post") 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    input(type="submit" class="bg-indigo-800 hover:bg-indigo-900 py-2 px-5 md:px-10 rounded-lg cursor-pointer" value="Cerrar Sesión")
        else 
            nav(class="my-5 text-sm flex flex-row items-center font-bold text-white gap-3")
                a(href="/auth/registro") Crear Cuenta
                a(href="/auth/login") Iniciar Sesión